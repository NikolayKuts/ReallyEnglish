<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2B2B2B</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="check_box_sign">
        <item name="android:textColor">#ECA946</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/check_box_type_of_verb</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:button">@null</item>
<!--        <item name="android:layout_weight">3</item>-->
    </style>

    <style name="text_view_v_form">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">-//-</item>
    </style>

    <style name="main_activity_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@color/main_activity_button_background</item>
        <item name="android:textColor">@color/main_activity_button_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="couples_activity_text_view_qu_an">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="couples_activity_linear_layout_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="check_box_type_tense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/check_box_tense_unchecked</item>
    </style>

    <style name="check_box_type_verbs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/check_box_unchecked</item>
    </style>

    <style name="algorithm_activity_image_button_show">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="repeat_zone_counter_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="repeat_zone_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

</resources>